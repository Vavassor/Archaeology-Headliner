<div class="container">
  {{> navbar }}

  <div class="row">
    {{#each articles as |article|}}
      <div class="col-md-6 pb-4">
        <div class="card h-100">
          <div class="card-body">
            <a href="{{article.link}}"><h2 class="card-title">{{article.title}}</h2></a>
            <p class="card-text">{{article.summary}}</p>
            <button class="btn btn-secondary remove-button" type="button" data-article-id="{{article._id}}">Remove</button>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">No articles saved</h2>
            <p class="card-text">Pressing "Save" on an article will make it to appear here.</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<script src="javascript/saved-articles.js"></script>